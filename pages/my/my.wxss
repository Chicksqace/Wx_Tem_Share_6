.container{
  width: 100%;
  height: 100vh;
  background-color: #F5F5F5;
}

/* 用户信息 */
.user{
  width: 100%;
  height: 20vh;
  background-color: #A3B6ED;
  display: flex;
  flex-direction: row;
}

.nick-icon{
  width:10vh;
  height: 10vh;
  background-color: #ffffff;
  margin-top: 6%;
  margin-left: 5%;
  border-radius: 100%;
}

.nick-name{
  width: 60%;
  margin-left: 5%;
  font-size: 38rpx;
  letter-spacing: 0.3vh;
  font-weight: 550;
}

.nick-name button{
  width: 55%;
  height: 5vh;
  text-align: left;
  margin:0;
  padding-left:0;
  margin-top: 5.5vh;
  background-color: #A3B6ED;
  color: #ffffff;
  border: 0; 
}

.set-icon{
  width:5vh;
  height: 5vh;
  margin-top: 5vh;
}

/* 我的服务 */
.sevice{
  width: 95%;
  height: 15vh;
  background-color: #ffffff;
  border-radius: 2vh;
  margin-left: 2.5%;
  position: absolute;
  top: 15vh;
  display: flex;
  flex-direction: row;
}
.sevice-item{
  width: 30%;
  height: 8vh;
  text-align: center;
  margin-left: 3%;
  margin-top: 5%;
}
.sevice-item image{
  width: 5vh;
  height: 5vh;
}
.sevice-item text{
  display: inline-block;
  width: 100%;
  font-size: 25rpx;
}

/* 基础服务 */
.base_sevice{
  width: 95%;
  height: auto;
  background-color: #ffffff;
  border-radius: 2vh;
  margin-left: 2.5%;
  margin-top: 12vh;
  padding-top: 2vh;
  padding-bottom: 1vh;
}

.base-item{
  display: flex;
  flex-direction: row;
  width: 95%;
  height: 6vh;
  line-height: 6vh;
  margin:0 2.5% 1.5vh 2.5%;
  border: 0.1vh solid #c0c0c0;
  border-radius: 20rpx;
}

.base-item image{
  width: 3.5vh;
  height: 3.5vh;
  margin:1vh;
}

.base-item text{
  width: 50%;
  font-size: 28rpx;
}

.notice-num{
  font-size: 20rpx;
  width: 3vh;
  height: 3vh;
  z-index: 100;
  margin-left: -40%;
  line-height: 6.5vh;
}

.toj{
  margin-left: 30%;
}