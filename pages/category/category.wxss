@import "../template/course-item.wxss";
.container {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100vh;
}

.menu,
.cat_list_con {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/*menu*/
.menu {
  width: 20%;
  border-right: 1rpx solid #7d7f7f;
}

.menu-item {
  font-size: 25rpx;
  text-align: center;
  width: 80%;
  margin-left: 10%;
  line-height: 6vh;
  /* border-bottom: 1rpx solid #00AFCC; */
  color: #7d7f7f;
}

.selected{
  border-left: 10rpx solid #00AFCC;
  color: #00AFCC;
}

/*list_con*/
.cat_list_con {
  width: 80%;
  background-color: #E3E6E1;
}

.adv,
.adv-item {
  width: 100%;
  height: 30vh;
  background-color: #ffffff;
}

.adv{
  will-change: transform;
}

.adv-item image {
  width: 98%;
  height: 100%;
  margin-left: 2%;
  border-radius: 2vh;
}
.cat_list_info {
  width: 100%;
  height: 68vh;
  margin-top: 2vh;
}