.comment-item {
  width: 95%;
  height: auto;
  margin-left: 2.5%;
  margin-bottom: 2vh;
  padding-bottom: 1.5vh;
  border-bottom: 0.1vh solid #c0c0c0;
}

.commnet-top {
  width: 100%;
  height: 8vh;
  display: flex;
  flex-direction: row;
}

.coment-top-left {
  width: 7vh;
  height: 7vh;
  border-radius: 10vh;
}

.comment-top-cen {
  width: 20vh;
  margin-left: 2vh;
}

.nickname {
  font-size: 30rpx;
  letter-spacing: 0.2vh;
  line-height: 5vh;
}

.coment-start-group {
  display: flex;
  flex-direction: row;
}

.coment-start-group image {
  width: 2vh;
  height: 2vh;
}

.coment-start-group text {
  font-size: 22rpx;
  margin-left: 1vh;
  color: #A9A9A9;
}

.comment-tiem {
  width: 18vh;
  font-size: 22rpx;
  line-height: 5vh;
  color: #A9A9A9;
  margin-left: 8vh;
}

.comment-con {
  width: 100%;
  margin-top: 1vh;
  font-size: 28rpx;
  line-height: 3.5vh;
  letter-spacing: 0.5vh;  
}

.hidden-last{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;/*超过3行隐藏用点表示*/
  -webkit-box-orient: vertical;
}