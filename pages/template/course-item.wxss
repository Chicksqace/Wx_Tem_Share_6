.info-item {
  width: 98%;
  height: 20vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  border-radius: 2vh;
  margin-left: 1%;
  margin-bottom: 2vh;
}

.info-thum,
.info-sum {
  margin-top: 1vh;
}

.info-thum {
  width: 18vh;
  height: 18vh;
  border-radius: 10vh;
  margin-left: 1vh;
  margin-right: 1vh;
}

.info-sum {
  display: flex;
  flex-direction: column;
  width: 63%;
}

.info-title,.info-age,.info-addr,.tags{
  overflow: hidden;/*溢出隐藏*/
  text-overflow: ellipsis;/*以省略号...显示*/
}

.info-title {
  width: 100%;
  font-size: 35rpx;
  font-weight: 600;
  white-space: nowrap;/*强制不换行*/
}

.stars-group{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 1vh;
  margin-bottom: 0.5vh;
}

.starts-box{
  width:39%;
}

.stars-group text{
  font-size: 25rpx;
  margin-left: 1vh;
  line-height: 2vh;
}


.starts{
  display: flex;
  flex-direction: row;
  width: 100%;
}

.starts image{
  width: 2vh;
  height: 2vh;
  margin-right: 0.5vh;
}

.info-age {
  width: 100%;
  font-size: 25rpx;
  white-space: nowrap;/*强制不换行*/
  line-height: 3.8vh;
}

.info-addr {
  width: 100%;
  font-size: 25rpx;
  line-height: 3.8vh;
}

.tags {
  width: 100%;
  font-size: 25rpx;
  margin-top: 0.5vh;
}

.tags text {
  padding: 0 1vh 0 1vh;
  margin-right: 1vh;
  background-color: #A1C3E7;
  color: #ffffff;
  border-radius: 2vh;
}