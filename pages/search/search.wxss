@import "../template/course-item.wxss";

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search {
  width: 690rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: row;
}

.se_in {
  background-color: #ebe5e5;
  border-radius: 20rpx;
  width: 600rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.backtext {
  font-size: 25rpx;
}

.se_btn {
  margin-left: 25rpx;
  text-align: left;
  font-size: 30rpx;
  line-height: 50rpx;
}

.tag_box {
  width: 690rpx;
  margin-left: 30rpx;
  margin-top: 50rpx;
}

.hot {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 25rpx;
  color: #8d8c8c;
  font-weight: 500;
  line-height: 60rpx;
  margin-top: 20rpx;
}

