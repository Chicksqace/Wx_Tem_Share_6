/* pages/home/home.wxss */
@import "../template/course-item.wxss";
.container {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  background-color: #E3E6E1;
  padding:0;
  margin:0;
}

/*滑块*/
.banner {
  width: 100%;
  height: 38vh;
}

.banner-item {
  width: 100%;
  height: 100%;
}

.banner-img {
  width: 100%;
  height: 100%;
}

/*课程分类*/
.category {
  width: 100%;
  height: auto;
  background-color: #ffffff;
  margin-bottom: 2vh;
  margin-top: 2vh;
}

.icon_box {
  display: flex;
  flex-direction: column;
  width: 20%;
  height: 11vh;
  margin-top: 1vh;
  float: left;
  margin-bottom: 1vh;
}

.icon_box image {
  width: 100%;
}

.icon_box text {
  text-align: center;
  font-size: 22rpx;
  letter-spacing: 10rpx;
  line-height: 38rpx;
}

/*课程列表*/
.course,
.course-item {
  width: 100%;
  height: auto;
  background-color: #ffffff;
}

.course-top {
  width: 100%;
  height: 8vh;
}

.list {
  width: 100%;
  height: auto;
}